#!/usr/bin/env python3
# programa arparseg su funcion es capturar la informacion ingresada por el usuario desde  desde la terminal 
#######################################
#program name --N=500000 --m=9 --zmax=30 --imax=0 --output_name='solution' 6
#######################################
from typing_extensions import Type
import argparse
import sys 
def iniciar():

    parser = argparse.ArgumentParser(description='argumentos de pedida del programa')

    parser.add_argument(
        '-n', 
        type=int,
        default=5,
        required=True,
        action='store',
        help='número de valores para cada solución mayores que 4'
    )    
   
    parser.add_argument(
        '-m', 
        type=int,
        default=1,
        required=False,
        help='valores positivos que l o k puede tomar'
    )
     
     parser.add_argument(
        '-imax',
        type=int,
        default=0, 
        required=False, 
        help='máximo de iteraciones para encontrar las soluciones'
    )
   
    parser.add_argument(
        '-zmax', 
        type=int,
        default=30,
        required=True,
        help='valor máximo que z puede tomar'
    )

    parser.add_argument(
        '-N', 
        type= int,
        default=500000,
        required=False,
        help='espacio de parámetros para hallar soluciones'
    )
    
    
    parser.add_argument('-w', '--output_name',type=str,default="solution",required=False,action='store',help='entero para que es la dimension de z ')
    
    sys.stdout.write(str(solutionfinal(args)))
    args = parser.parse_args()
    return args

def main(args): 
  
  if args.number:
      
      s=solutionfinal(args.n,args.m,args.imax,args.zmax,args.N)
      s.to_json(args.output_name+'.json',orient='records')
        
  return  print(s) 
 
if __name__ == '__main__': 
    
    args=iniciar()
    main(args)

