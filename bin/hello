from typing_extensions import Type

# Import the library
#from desoper import abc123# debo importar funciones del archivo pc 
import argparse
#from desoper.myfirstpypi import principal 
import sys 
def iniciar():

    parser = argparse.ArgumentParser(description='argumentos de pedida del programa')

   
    parser.add_argument(
        '-N', 
        type= int,
        default=500000,
        required=False,
        help='espacio de parámetros'
    )
    
    parser.add_argument(
        '-m', 
        type=int,
        default=1,
        required=False,
        help='agregue enteros mayores que 1 hasta que obtenga soluciones completas '
    )
     
    parser.add_argument(
        '-zmax', 
        type=int,
        default=30,
        required=False,
        help='valor máximo en las soluciones'
    )
    
    parser.add_argument(
        '-imax',
        type=int,
        default=0, 
        required=False, 
        help='valor de iteraciones hechas para recorrer el espacio de posibles respuestas'
    )
   
    parser.add_argument(
        '-n', 
        type=int,
        default=5,
        required=True,
        action='store',
        help='entero para que es la dimension de z'
    )
    
    
    parser.add_argument('-w', '--output_name',type=str,default="solution",required=False,action='store',help='entero para que es la dimension de z ')
    
    args = parser.parse_args()
    return args

def main(args): 
  
  if args.number:
      
      c=principal(args.number,args.magnitud,args.imaximo,args.zmaximo,args.numlist)
      c.to_json(args.output_name+'.json',orient='records')
        
  return  print(c) 
 
if __name__ == '__main__': 
    args=iniciar()
    main(args)

